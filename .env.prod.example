# Domain (Caddy will auto-provision SSL)
DOMAIN=feedjam.example.com

# Database
POSTGRES_USER=feedjam
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=feedjam

# Auth (REQUIRED - generate with: openssl rand -hex 32)
JWT_SECRET_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL

# OpenAI (optional, for summaries)
OPEN_AI_KEY=sk-...

# Email webhook secret (must match Cloudflare worker)
WEBHOOK_SECRET=CHANGE_ME_RANDOM_STRING

# Features
ENABLE_SUMMARIZATION=true
