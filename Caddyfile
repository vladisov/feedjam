{$DOMAIN} {
    # API proxy
    handle /api/* {
        reverse_proxy api:8000
    }

    # Webhook endpoint (if used)
    handle /webhook/* {
        reverse_proxy api:8000
    }

    # Static frontend files
    handle {
        root * /srv
        try_files {path} /index.html
        file_server
    }

    # Security headers
    header {
        X-Content-Type-Options nosniff
        X-Frame-Options DENY
        Referrer-Policy strict-origin-when-cross-origin
    }

    # Gzip compression
    encode gzip
}
